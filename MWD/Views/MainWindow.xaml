<Window x:Class="WPF_MVVM_Core_with_DI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MVVM_Core_with_DI.Views"
        xmlns:viewmodels="clr-namespace:WPF_MVVM_Core_with_DI.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WinTitle}" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Get greeting"
                Height="80px"
                FontSize="20"
                Margin="15 0 15 0"
                Command="{Binding GetGreetingCommand}"/>
        <TextBlock Text="{Binding Greeting}"
                   Grid.Column="1"
                   FontSize="20"
                   Margin="15 0 15 0"
                   VerticalAlignment="Center"/>


    </Grid>
</Window>
